# Configuration File Example
# Copy this file to config.yaml and customize as needed

environment: development

# Algorithm Configuration
algorithm:
  chunk_size: 12
  chunking_threshold: 15
  max_tokens: 3000
  retry_attempts: 3
  timeout_seconds: 60

# Path Configuration
paths:
  schemas_dir: reference/schemas
  output_dir: output
  analytics_dir: output/analytics
  brd_input_dir: reference/brd/input
  brd_output_dir: reference/brd/output

# LLM Configuration
llm:
  model: gpt-4
  temperature: 0.7
  max_tokens: 3000
  # api_key: Set via OPENAI_API_KEY environment variable or .env file

# Application Settings
debug: false
verbose: false


